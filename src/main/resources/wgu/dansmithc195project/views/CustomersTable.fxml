<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="500.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="wgu.dansmithc195project.controllers.CustomersTableController">
    <padding>
        <Insets right="10.0"/>
    </padding>
    <TableView fx:id="customerTable" layoutX="24.0" layoutY="14.0" prefHeight="400.0" prefWidth="800.0">
      <columns>
          <TableColumn fx:id="customerIDColumn" prefWidth="72.0" text="CustomerID"/>
          <TableColumn fx:id="customerNameColumn" prefWidth="135.0" text="Customer name"/>
          <TableColumn fx:id="countryColumn" minWidth="3.0" prefWidth="67.0" text="Country"/>
          <TableColumn fx:id="divisionColumn" prefWidth="72.0" text="Division"/>
          <TableColumn fx:id="addressColumn" prefWidth="203.0" text="Address"/>
          <TableColumn fx:id="postalCodeColumn" prefWidth="93.0" text="Postal Code"/>
          <TableColumn fx:id="phoneNumberColumn" prefWidth="158.0" text="Phone Number"/>
      </columns>
    </TableView>
    <HBox alignment="CENTER" layoutX="358.0" layoutY="434.0" prefHeight="45.0" prefWidth="461.0" spacing="15.0"
          AnchorPane.bottomAnchor="27.0" AnchorPane.leftAnchor="358.0" AnchorPane.rightAnchor="25.0"
          AnchorPane.topAnchor="434.0">
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
        <opaqueInsets>
            <Insets bottom="10.0" right="10.0"/>
        </opaqueInsets>
        <Button fx:id="addCustomerButton" alignment="CENTER" mnemonicParsing="false" onAction="#clickAddButton"
                prefHeight="25.0" prefWidth="80.0" text="Add" textAlignment="CENTER">
            <padding>
                <Insets right="10.0"/>
            </padding>
        </Button>
        <Button fx:id="editCustomerButton" alignment="CENTER" mnemonicParsing="false" onAction="#clickEditButton"
                prefHeight="25.0" prefWidth="80.0" text="Edit" textAlignment="CENTER"/>
        <Button fx:id="deleteCustomerButton" alignment="CENTER" mnemonicParsing="false"
                onAction="#clickDeleteButton" prefHeight="25.0" prefWidth="80.0" text="Delete"
                textAlignment="CENTER"/>
        <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#clickBackButton"
                prefHeight="25.0" prefWidth="80.0" text="Back" textAlignment="CENTER">
            <HBox.margin>
                <Insets left="50.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</AnchorPane>
